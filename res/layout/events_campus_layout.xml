<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/event_campus_topBar"
        android:layout_alignParentTop="true"
        layout="@layout/top_bar_arrows_layout" />

    <GridView
        android:id="@+id/events_grid_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/event_campus_topBar"
        android:gravity="center"
        android:horizontalSpacing="1px"
        android:listSelector="@null"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1px" >
    </GridView>

    <include
        android:id="@+id/event_campus_loadingbar"
        layout="@layout/loading_bar_layout"
        android:visibility="invisible" />

</RelativeLayout>