<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="@drawable/news_list_background_selector"
    android:padding="5dp" >

    <TextView
        android:id="@+id/emergency_list_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="title"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/emergency_list_row_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergency_list_row_title"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="(519.834.3234 ext. 5432)"
        android:textColor="#666666"
        android:textSize="11sp" />

<!--         android:layout_marginLeft="5dp" -->
<!--         android:layout_toRightOf="@id/emergency_list_row_title" -->
<!--         android:layout_alignTop="@id/emergency_list_row_title" -->
<!--         android:layout_alignBottom="@id/emergency_list_row_title" -->
    <TextView
        android:id="@+id/emergency_list_row_avail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergency_list_row_phone"
        android:text="24-hour, 7 days/week"
        android:textColor="#999999"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/emergency_tele" />

</RelativeLayout>