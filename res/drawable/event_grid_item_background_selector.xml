<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- Pressed -->
	<item android:state_pressed="true" android:drawable="@drawable/event_grid_item_background_selected" />
	<!-- Focused -->
	<item android:state_focused="true" android:drawable="@drawable/event_grid_item_background_unselected" />
	<!-- Selected -->
	<item android:state_selected="true" android:drawable="@drawable/event_grid_item_background_unselected" />
	<!-- Not Pressed -->
	<item android:state_pressed="false" android:drawable="@drawable/event_grid_item_background_unselected" />
</selector>